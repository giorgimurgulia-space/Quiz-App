<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/shape_input_background"
        android:gravity="center"
        android:hint="@string/input_your_name"
        android:padding="19dp"
        android:textSize="12sp"
        app:boxStrokeColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="117dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_input_background"
        android:backgroundTint="@color/Yellow_Primary"
        android:text="@string/start_quiz"
        android:textColor="@color/Neutral_04_White"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/email_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>