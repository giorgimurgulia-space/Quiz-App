<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16_dp">

    <TextView
        android:id="@+id/title_text"
        style="@style/normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:gravity="center"
        android:textColor="@color/neutral_01_dark_grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="პროგრამირება" />

    <ImageView
        android:id="@+id/cancel_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_text" />

    <TextView
        android:id="@+id/question_progress_text"
        style="@style/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2_dp"
        android:textColor="@color/neutral_01_dark_grey"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/quiz_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1/10" />

    <TextView
        android:id="@+id/current_point_text"
        style="@style/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2_dp"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:textColor="@color/yellow_primary"
        app:drawableEndCompat="@drawable/ic_white_star"
        app:drawableTint="@color/yellow_primary"
        app:layout_constraintBottom_toTopOf="@id/quiz_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="მიმდინარე ქულა: 1" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/quiz_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_9_dp"
        android:layout_marginTop="@dimen/dimen_34_dp"
        app:indicatorColor="@color/blue_secondary_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:trackColor="@color/neutral_04_light_grey"
        app:trackCornerRadius="@dimen/dimen_5_dp"
        app:trackThickness="@dimen/dimen_10_dp" />

    <TextView
        android:id="@+id/question_text"
        style="@style/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24_dp"
        android:background="@drawable/shape_rectangle_background"
        android:backgroundTint="@color/blue_secondary_lightest"
        android:gravity="center"
        android:padding="@dimen/dimen_34_dp"
        android:textColor="@color/neutral_01_dark_grey"
        app:layout_constraintBottom_toTopOf="@id/main_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quiz_progress_bar"
        tools:text="რომელია ყველაზე პოპულარული პროგრამირების ენა?" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_34_dp"
        app:layout_constraintBottom_toTopOf="@id/submit_button"
        app:layout_constraintTop_toBottomOf="@id/question_text"
        tools:listitem="@layout/layout_answer" />

    <Button
        android:id="@+id/submit_button"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55_dp"
        android:layout_marginHorizontal="@dimen/dimen_16_dp"
        android:layout_marginVertical="@dimen/dimen_34_dp"
        android:background="@drawable/shape_rectangle_background"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_recycler" />


</androidx.constraintlayout.widget.ConstraintLayout>