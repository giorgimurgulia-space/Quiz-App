<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.space.quizapp.presentation.view.QuestionBackground
        android:id="@+id/question_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/question_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        style="@style/normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:gravity="center"
        android:textColor="@color/neutral_01_dark_grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="პროგრამირება" />

    <ImageView
        android:id="@+id/cancel_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_text" />

    <TextView
        android:id="@+id/question_text"
        style="@style/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_45_dp"
        android:layout_marginTop="@dimen/dimen_45_dp"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_45_dp"
        android:textColor="@color/neutral_01_dark_grey"
        app:layout_constraintBottom_toBottomOf="@id/question_background"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        tools:text="რომელია ყველაზე პოპულარული პროგრამირების ენა?" />


</androidx.constraintlayout.widget.ConstraintLayout>