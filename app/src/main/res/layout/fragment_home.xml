<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16_dp">

    <TextView
        android:id="@+id/welcome_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:lineHeight="@dimen/dimen_21_dp"
        android:textColor="@color/yellow_primary"
        android:textSize="@dimen/dimen_16_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="გამარჯობა, გიორგი" />

    <TextView
        android:id="@+id/GPA_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:lineHeight="@dimen/dimen_21_dp"
        android:textColor="@color/yellow_primary"
        android:textSize="@dimen/dimen_16_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_title_text"
        tools:text="გამარჯობა, გიორგი" />

</androidx.constraintlayout.widget.ConstraintLayout>