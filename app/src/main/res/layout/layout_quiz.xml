<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_20_dp"
    android:background="@drawable/shape_rectangle_background"
    android:backgroundTint="@color/neutral_04_light_grey"
    android:paddingHorizontal="@dimen/dimen_29_dp"
    android:paddingVertical="@dimen/dimen_22_dp">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_geography"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        style="@style/normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18_dp"
        android:textColor="@color/neutral_01_dark_grey"
        app:layout_constraintBottom_toTopOf="@id/description_text"
        app:layout_constraintEnd_toStartOf="@id/point_text"
        app:layout_constraintStart_toEndOf="@id/icon_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="გეგრაფია" />

    <TextView
        android:id="@+id/description_text"
        style="@style/small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/neutral_02_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/point_text"
        app:layout_constraintStart_toStartOf="@id/title_text"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        tools:text="აღწერა" />

    <ImageView
        android:id="@+id/point_text"
        android:layout_width="@dimen/dimen_45_dp"
        android:layout_height="@dimen/dimen_45_dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/yellow_primary"
        android:scaleType="centerInside"
        android:src="@drawable/ic_next_stroke"
        android:textColor="@color/neutral_04_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>